{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["node_modules", "dist"]
}